{
  "name": "Imagopedia",
  "version": "1.3",
  "description": "Clip an image and get a detailed analysis about it.",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Take a screen shot!"
  },
  "permissions": [
    "activeTab",
    "http://*/*",
    "http://*/*"
  ],
  "manifest_version": 2
}
